<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainMenuActivity" >

    <!-- android:background="@android:color/transparent" -->
    
    <!--  Header  Starts-->
        <LinearLayout android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@layout/header_gradient"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                
                <!-- Logo Start-->
                <ImageView 
                    android:src="@drawable/ic_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>
                <!-- Logo Ends -->
                
        </LinearLayout>
        <!--  Header Ends -->

    <Button
        android:id="@+id/my_j"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/near"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bg"
        android:drawableLeft="@drawable/content_paste"
        android:text="My Journey"
        android:textColor="#ffffff"
        android:textSize="19sp" />

    <Button
        android:id="@+id/bus_poi"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/my_j"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bg"
        android:drawableLeft="@drawable/location_directions"
        android:text="Navigation"
        android:textColor="#ffffff"
        android:textSize="19sp" />

    <Button
        android:id="@+id/bus_pls"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bus_poi"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bg"
        android:drawableLeft="@drawable/location_web_site"
        android:text="Browse Place"
        android:textColor="#ffffff"
        android:textSize="19sp" />

    <Button
        android:id="@+id/weather"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bus_pls"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bg"
        android:drawableLeft="@drawable/collections_cloud"
        android:text="Weather"
        android:textColor="#ffffff"
        android:textSize="19sp" />

    <Button
        android:id="@+id/transport"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/weather"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bg"
        android:drawableLeft="@drawable/airplane_mode"
        android:text="Transport"
        android:textColor="#ffffff"
        android:textSize="19sp" />

    <Button
        android:id="@+id/near"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/my_j"
        android:layout_alignParentTop="true"
        android:layout_marginTop="144dp"
        android:background="@drawable/btn_bg"
        android:drawableLeft="@drawable/ic_location_place"
        android:text="Near Me"
        android:textColor="#ffffff"
        android:textSize="19sp" />

</RelativeLayout>
